<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/border_rec">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/date_icon"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <com.rahbod.visit365.Font.FontTextView
        android:id="@+id/dateVisitS2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="2dp"
        android:gravity="right"
        android:text="2 دی 1396"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <com.rahbod.visit365.Font.FontTextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dateVisitS2"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="5dp"
        android:text="11-9   صبح"
        android:textColor="@color/hint"
        android:textSize="12sp" />

    <com.rahbod.visit365.Font.ButtonFont
        android:id="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_shape"
        android:text="انتخاب"
        android:textSize="12dp"
        android:textColor="@color/white" />
</RelativeLayout>