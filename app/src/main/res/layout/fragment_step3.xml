<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="com.rahbod.visit365.Step3Fragment">

    <!--header-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/green1">

        <com.rahbod.visit365.Font.FontTextView
            android:id="@+id/textw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="ویزیت 365"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnBackToStep2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/header"
        android:id="@+id/header_step_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef">

        <ImageView
            android:id="@+id/image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/circle_3"/>

        <com.rahbod.visit365.Font.FontTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="37dp"
            android:layout_toLeftOf="@+id/image"
            android:text="دریافت نوبت"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <com.rahbod.visit365.Font.FontTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/image"
            android:text="مرحله چهارم"
            android:textColor="@color/hint"
            android:textSize="11dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header_step_4"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:text="لطفا همه اطلاعات را بررسی نمایید"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView20"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:text="اطلاعات بیمار"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dataPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="15dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="نام و نام خانوادگی"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView22"
                        android:layout_marginTop="10dp"
                        android:text="کد ملی"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView23"
                        android:layout_marginTop="10dp"
                        android:text="تلفن همراه"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/nationalCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/user"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/nationalCode"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/dataPersonal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:text="اطلاعات نوبت"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/dataVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView30"
                android:layout_marginTop="15dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="مطب"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView31"
                        android:layout_marginTop="10dp"
                        android:text="پزشک"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView32"
                        android:layout_marginTop="10dp"
                        android:text="تخصص"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView33"
                        android:layout_marginTop="10dp"
                        android:text="تاریخ مراجعه"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView34"
                        android:layout_marginTop="10dp"
                        android:text="ساعت حضور پزشک"
                        android:textColor="@color/black"
                        android:textSize="12dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView38"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView37"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView38"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView39"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                    <com.rahbod.visit365.Font.FontTextView
                        android:id="@+id/textView41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView40"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/hint"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/dataVisit"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="35dp"
                android:background="#efefef">

                <com.rahbod.visit365.Font.FontTextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="کمیسیون سایت:"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.rahbod.visit365.Font.FontTextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/textView36"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="85dp"
                    android:textColor="@color/orange"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <com.rahbod.visit365.Font.ButtonFont
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_shape2"
                    android:text="پرداخت"
                    android:textColor="@color/white"
                    style="?android:attr/borderlessButtonStyle"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
