<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:src="@drawable/doctor"
        app:civ_border_color="#b1b1b1"
        app:civ_border_width="1dp"
        android:transitionName="ImageProfileDr"/>

    <com.rahbod.visit365.Font.FontTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:text="دکتر بهنام رادمهر"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:transitionName="NameProfileDr"/>

    <com.rahbod.visit365.Font.FontTextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:text="روز های حضور شنبه دوشنبه چهارشنبه"
        android:textSize="11dp"
        android:transitionName="EmailProfileDr"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/imageView2"
        android:orientation="horizontal"
        android:layoutDirection="ltr">

        <com.rahbod.visit365.Font.ButtonFont
            android:id="@+id/button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape2"
            android:text="اطلاعات پزشک"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <com.rahbod.visit365.Font.ButtonFont
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="رزرو نوبت"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </LinearLayout>
</RelativeLayout>