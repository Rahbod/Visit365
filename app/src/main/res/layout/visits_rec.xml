<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rec"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layoutDirection="rtl">

        <com.rahbod.visit365.Font.FontTextView
            android:id="@+id/txtClinicRecList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بیمارستان"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <com.rahbod.visit365.Font.FontTextView
            android:id="@+id/txtDrRecList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پزشک"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/txtTrackingCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وضعیت نوبت"
                android:textColor="@color/hint"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/txtCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تاریخ رزرو"
                android:textColor="@color/hint"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/txtDateRecList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وضعیت نوبت"
                android:textColor="@color/hint"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/txtVisitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وضعیت نوبت"
                android:textColor="@color/hint"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <com.rahbod.visit365.Font.FontTextView
                android:id="@+id/txtStatusDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="وضعیت نوبت"
                android:textColor="@color/hint"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>